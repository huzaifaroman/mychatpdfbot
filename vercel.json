{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/upload_pdf",
      "dest": "/backend/api/upload_pdf.py"
    },
    {
      "src": "/api/pdf_query",
      "dest": "/backend/api/pdf_query.py"
    },
    {
      "src": "/api/chat",
      "dest": "/backend/api/chat.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://askaudacity.vercel.app"
  }
}
